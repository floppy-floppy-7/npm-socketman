{
  "compilerOptions": {
    //sets JS engine to common JS - requiring in info
    "module": "ES2022",
    //allows us to use import/export syntac
    "esModuleInterop": true,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    //mostly concerned with removing comments from code
    "removeComments": false,
    //this is most likely always set to true, also soon to be depricated
    "preserveConstEnums": true,
    "sourceMap": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noImplicitThis": true
  },
  //specifies an array of filenames or patterns to include in program
  "files": ["index.ts", "test/server.ts"]
  // "exclude": ["test"]
}
